# Backend Environment Variables

# Server Configuration
NODE_ENV=development
PORT=4000
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/clawdeploy

# Clerk Authentication
CLERK_PUBLISHABLE_KEY=pk_test_YOUR_PUBLISHABLE_KEY
CLERK_SECRET_KEY=sk_test_YOUR_SECRET_KEY

# Docker Configuration
DOCKER_SOCKET_PATH=/var/run/docker.sock

# OpenClaw Configuration (to be updated when image is available)
OPENCLAW_IMAGE=nginx:alpine
OPENCLAW_DEFAULT_MEMORY_LIMIT=512m
OPENCLAW_DEFAULT_CPU_LIMIT=1

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-here

# Logging
LOG_LEVEL=info

# Optional: Monitoring and Error Tracking
# SENTRY_DSN=
# SLACK_WEBHOOK_URL=
