generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Instance {
  id           String   @id @default(cuid())
  userId       String
  name         String
  model        String   @default("claude-opus-4.5")
  channel      String   @default("")
  status       String   @default("pending")
  region       String?
  instanceType String?
  botToken     String?
  apiKey       String?
  aiProvider   String?
  containerId  String?
  port         Int?
  gatewayToken String?
  config       Json?    @default("{}")
  ipAddress    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
  @@index([status])
}
